package jeu.bases {		import flash.display.MovieClip;		import flash.display.Sprite;		/**	 * @author Aymeric	 */	public class Alien extends Sprite {				private var maBaseAlien : MovieClip=new BaseAlien();				private var vie:int=100000;		private var niveauBase:int=1;		private var baseDetruite : Boolean=false;		public function Alien():void {						addChild(maBaseAlien);		}				public function baseAttaquee(degatSubit : int) : Boolean {						vie = vie - degatSubit;						if (vie<1) {				baseDetruite=true;			}			return baseDetruite;		}	}}