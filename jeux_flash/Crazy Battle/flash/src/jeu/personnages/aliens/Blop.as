package jeu.personnages.aliens {		import flash.display.MovieClip;		import flash.display.Sprite;	import flash.events.Event;	/**	 * @author Aymeric	 */	public class Blop extends Sprite {				private const force : int=10;		private const vitesse:int=-10;				private var monPersoBlop : MovieClip = new PersoBlop();				private var vie : int=50;		public function Blop():void {						addChild(monPersoBlop);			monPersoBlop.scaleX=0.05;			monPersoBlop.scaleY=0.05;			monPersoBlop.x=1000;			monPersoBlop.y=400;						monPersoBlop.addEventListener(Event.ENTER_FRAME, deplacementBlop, false, 0, true);		}				public function combat():void {			monPersoBlop.removeEventListener(Event.ENTER_FRAME, deplacementBlop);			monPersoBlop.stop();						monPersoBlop.gotoAndPlay(30);		}		private function deplacementBlop(e:Event):void {						monPersoBlop.x+=vitesse;		}	}}